<!-- SIGNUP PAGE -->

<div class="signup-page-container">
  <div class="signup-form-container">
    <h1 class="page-title">Creating an account...</h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="signup-user-details">
        <h3 class="page-subtitle">Tell us a little about yourself</h3>
        <div class="form-inputs">
          <%= f.input :first_name,
                      label: 'First name:',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "First Name" }%>
          <%= f.input :last_name,
                      label: 'Last name:',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "Last Name" }%>
          <%= f.input :email,
                      label: 'Email:',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: 'Password:',
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>
      </div>

      <div class="signup-learning-options">
        <h3 class="page-subtitle">Select your first learning topic</h3>
        <div class="form-option learning form-selected">
          <p>Le Wagon</p>
        </div>
        <div class="form-option learning form-selected">
          <p>Duolingo</p>
        </div>
        <div class="form-option learning">
          <p>Elevate</p>
        </div>
      </div>

      <div class="signup-blacklist-options">
        <h3 class="page-subtitle">Select some websites you'd like to blacklist</h3>
        <div class="form-option blacklist form-selected">
          <p>Facebook.com</p>
        </div>
        <div class="form-option blacklist form-selected">
          <p>Instagram.com</p>
        </div>
        <div class="form-option blacklist">
          <p>Twitter.com</p>
        </div>
      </div>

      <div class="signup-btn-container">
        <%= f.button :submit, "Sign Up", class: "btn-login"%>
      </div>

      <!-- Temporary JS button -->
      <div class="signup-btn-container">
        <a href="#" class="btn-login" id="btn-js"><p>Javascript</p></a>
      </div>

    <% end %>


  </div>
</div>
