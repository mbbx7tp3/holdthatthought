<body>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1 style="text-align: center; margin-top: 20px; font-family: Noto Serif JP;">  Hi <%= @user.first_name %> here is your dashboard </h1>

<div class="dashboard-layout">
  <main class="dashboard-layout-main">
    <aside class="dashboard-sidebar">
      <div class="dashboard-sidebar-container">
        <div class="tab">
          <button class="tablinks" onclick="openPage(event, 'YourStats')" id="defaultOpen">Your Stats </button>
          <button class="tablinks" onclick="openPage(event, 'BlockedWebsites')"> Blocked Websites</button>
          <button class="tablinks" onclick="openPage(event, 'Learning')"> Learning Topics </button>
          <button class="tablinks" onclick="openPage(event, 'Subscription')"> Subscriptions </button>
          <button class="tablinks" onclick="openPage(event, 'Settings')"> Account Settings </button>
          <button class="tablinks" onclick="openPage(event, 'Devices')"> Your Devices </button>
          <button class="tablinks" onclick="openPage(event, 'ContactUs')"> Contact Us </button>
          <button> <%= link_to "Log out", destroy_user_session_path, method: :delete %> </button>
        </div>
      </div>
    </aside>
    <div class="dashboard-layout-right">
      <div id="YourStats" class="tabcontent">
        <h1 style= 'font-family: Noto Serif JP'> <%= @user.first_name %> Stats </h1>
        <p style="margin-top: 10px"> Times Blocked: 7 </p>
        <p> Flash Cards Answered: 21</p>
        <p> Time Saved: 1 Hour and 2 Minutes </p>
      </div>
      <div id="BlockedWebsites" class="tabcontent">
        <h1 style= 'font-family: Noto Serif JP'> <%= @user.first_name %>'s Blocked Websites </h1>
        <div class= "card-container-dashboard">
          <div class="card-product-dashboard">
            <img src="assets/facebook.png" />
            <div class="card-product-infos">
              <h2>Facebook</h2>
            </div>
          </div>

          <div class="card-product-dashboard">
            <img src="assets/twitter.png" />
            <div class="card-product-infos">
              <h2>Twitter</h2>
            </div>
          </div>

          <div class="card-product-dashboard">
            <img src="assets/bbcnews.png" />
            <div class="card-product-infos">
              <h2>BBC News</h2>
            </div>
          </div>

          <div class="card-product-dashboard">
            <img src="assets/instagram.png" />
            <div class="card-product-infos">
              <h2>Instgram</h2>
            </div>
          </div>
        </div>
      </div>

      <div id="Learning" class="tabcontent">
        <h1 style= 'font-family: Noto Serif JP'> <%= @user.first_name %> here are your learning topics </h1>
          <div class= "card-container-dashboard">
            <div class="card-product-dashboard">
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" />
              <div class="card-product-infos">
                <h2>Le Wagon</h2>
                <p>Change your life, learn to code</p>
              </div>
            </div>
          </div>
      </div>

      <div id="Subscription" class="tabcontent">
        <h1 style= 'font-family: Noto Serif JP'> <%= @user.first_name %>'s Subcription Details </h1>
         You are on our free plan
      </div>

      <div id="Settings" class="tabcontent">
        <h1 style= 'font-family: Noto Serif JP'> <%= @user.first_name %>'s Account details </h1>
        <p> First Name: <%= @user.first_name %> </p>
        <p> Last Name: <%= @user.last_name %> </p>
        <p> Email: <%= @user.email %></p>
        <%= link_to "Edit Account Details", edit_user_registration_path, class: "btn btn-info btn-xs" %>
      </div>

      <div id="Devices" class="tabcontent">
        <h1 style= 'font-family: Noto Serif JP'> <%= @user.first_name %> Blocked Devices </h1>
          <p><%= @user.first_name %> iPhone </p>
          <p><%= @user.first_name %> Mac </p>
      </div>

      <div id="ContactUs" class="tabcontent">
        <a href="https://github.com/mbbx7tp3/holdthatthought" target="_blank"> Have a look at our Code </a>
      </div>


    </div>

  </main>

</div>
<script>
function openPage(evt, cityName) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }
  document.getElementById(cityName).style.display = "block";
  evt.currentTarget.className += " active";
}

  document.getElementById("defaultOpen").click();
</script>
</body>
