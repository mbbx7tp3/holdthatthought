<div class="row">
  <div class="column-left">
    <div class="top-left">
      <div class="header">
      <h1> Your Blocked Websites </h1>
      </div>
      <div class="sub-header">
      <h2> Currently Blocking </h2>
      </div>
      <div class= "card-container-dashboard">
      <% @user.blacklists.each do |blacklist| %>
      <div class="blacklist-website">
        <% if blacklist.image_url.present? %>
          <p class="website"> <%= image_tag blacklist.image_url, alt: "alttext" %> <%= blacklist.name %>
            <%= link_to 'Remove Website', blacklist_path(blacklist),
                   method: :delete,
                   data: { confirm: 'Are you sure?' } %></p>
        <% else %>

          <p class="website"> <%= image_tag "unnamed.png", alt: "alttext" %> <%= blacklist.name %> </p>
            <p> <%= link_to "remove website", blacklist_path(blacklist),
                   method: :delete,
                   data: { confirm: 'Are you sure?' } %> </p>
          <% end %>

      </div>
      <% end %>

      </div>
      <a class= "btn btn-ghost" href="/blockedwebsite" style="margin-top: 20px"> Add A blocked website </a>
    </div>
  </div>

  <div class="column-right">

      <div class="header">
      <h1> Your Learning topics </h1>
      </div>
      <div class="sub-header">
      <h2> Currently Studying </h2>
      </div>
      <div class= "card-container-dashboard">
        <div class="blacklist-website">
          <p class="website"> <%= image_tag "logo.png", alt: "alttext" %>Le Wagon </p>
        </div>
      </div>
</div>
