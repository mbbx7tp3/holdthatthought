<body>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h2 style="text-align: center; margin-top: 20px;">  Hi <%= @user.first_name %> here is your dashboard </h2>

<div class="dashboard-layout">
  <main class="dashboard-layout-main">
    <aside class="dashboard-sidebar">
      <div class="dashboard-sidebar-container">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active" style="padding-bottom: 10px;">
          <%= link_to  "Your Stats", class: "dropdown-item"%>
          </li>
        </ul>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active" style="padding-bottom: 10px;">
          <%= link_to  "Blocked Websites", class: "dropdown-item"%>
          </li>
        </ul>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active" style="padding-bottom: 10px;">
          <%= link_to  "What are you learning", class: "dropdown-item"%>
          </li>
        </ul>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active" style="padding-bottom: 10px;">
          <%= link_to  "Subscription Details", class: "dropdown-item"%>
          </li>
        </ul>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active" style="padding-bottom: 10px;">
          <%= link_to  "Account Settings", class: "dropdown-item"%>
          </li>
        </ul>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active" style="padding-bottom: 10px;">
          <%= link_to  "Your Devices", class: "dropdown-item"%>
          </li>
        </ul>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active" style="padding-bottom: 10px;">
          <%= link_to "Contact Us", class: "dropdown-item"%>
          </li>
        </ul>
      </div>
    </aside>
    <div class="dashboard-layout-right">
      <div class="Your-stats">
        <h2> <%= @user.first_name %> Stats </h2>
        <p> Times Blocked: 7 </p>
        <p> Flash Cards Answered: 21</p>
        <p> Time Saved: 1 Hour and 2 Minutes </p>
      </div>
      <div class="dashboard-websites">
        <h2> <%= @user.first_name %>'s Blocked Websites </h2>
        <a href="https://www.facebook.com/" target="_blank" class="fa fa-facebook"></a>
        <a href="https://twitter.com/explore" target="_blank" class="fa fa-twitter"></a>
      </div>
      <div class="dashboard-learning">
        <h2> <%= @user.first_name %> here are your learning topics </h2>
        Coding
      </div>
      <div class="Subscription-details">
        <h2> <%= @user.first_name %>'s Subcription Details </h2>
         You are on our free plan
      </div>
      <div class="Account-Setting">
        <h2> <%= @user.first_name %>'s Account details </h2>
        <p> First Name: <%= @user.first_name %> </p>
        <p> Last Name: <%= @user.last_name %> </p>
        <p> Email: <%= @user.email %></p>
        <%= link_to "Edit Account Details", edit_user_registration_path, class: "btn btn-info btn-xs" %>
      </div>
      <div class="Your-Devices">
        <h2> <%= @user.first_name %> Blocked Devices </h2>
          <p><%= @user.first_name %> iPhone </p>
          <p><%= @user.first_name %> Mac </p>
      </div>

    </div>
  </main>
  <div class=logout-button>
    <ul class="nav-item active" style="padding-bottom: 10px;">
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-info btn-lg" %>
    </ul>
  </div>

</div>
</body>
