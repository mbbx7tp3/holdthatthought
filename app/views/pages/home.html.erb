<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div>
    <a class="navbar-brand" href="#" style="padding-left: 25px;">
      <%= image_tag "logo.png", alt: "alttext" %>
    </a>
     <a style= 'font-size: 20px; text-decoration: none;'class="holdthatthought" href="#">Hold that thought...</a>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active" style="padding-right: 25px;">
        <% if user_signed_in? %>
          <li class="nav-item active" style="padding-right: 10px;">
            <p class="nav-link" style="color: grey;"> <%= @user.first_name %> <%= @user.last_name %></p>
          </li>
          <li class="nav-item dropdown" style="padding-right: 25px;">
            <% if @user.photo.attached? %>
              <%= cl_image_tag @user.photo.key , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <%  else %>
              <%=  image_tag "default_avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Go to you dashboard", "/dashboard", class: "dropdown-item" %>
              <%= link_to "Account Details", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <a class= "btn btn-ghost" href="/users/sign_in">Login</a>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<div class="jumbotron jumbotron-fluid">
  <div class ="overlay">
  <%= video_tag "homepagevid.mp4",autoplay: true, loop: true, muted: 'muted', :controls => false, :id => 'jumbo-video-home', class: "tesben" %>
  </div>
</div>

<header>
  <div class="intro-text">
   <h1 style="font-size: 50px; padding-bottom: 50px;"> Waste your time productively </h1>
    <% if user_signed_in? %>
      <a class= "btn btn-ghost" href="/dashboard">Dashboard</a>
      <a class= "btn btn-ghost" href="https://chrome.google.com/webstore/category/extensions" target='_blank'>Download</a>
    <% else %>
      <a class= "btn btn-ghost" href="/users/sign_up">Get Started</a>
    <% end %>
  </div>
</header>


