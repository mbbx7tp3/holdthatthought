<% end %>


<h3>What would you like to avoid?</h3>

<%= simple_form_for(@blacklist_user, url: blacklist_users_create_path) do |f| %>
  <%= f.input :blacklist, as: :check_boxes, collection: @blacklist_options %>
  <%= f.button :submit, class:"btn btn-primary" %>
<% end %>

